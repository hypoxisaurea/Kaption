{
  "manifest_version": 3,
  "name": "Kaption",
  "version": "1.0.0",
  "description": "Korean culture docent",
  "host_permissions": ["<all_urls>"],
  "permissions": ["storage", "scripting", "tabs", "sidePanel", "notifications", "activeTab"],
  "action": {
    "default_icon": {
      "16": "logo/logo16.png",
      "32": "logo/logo32.png"
    },
    "default_title": "Korean culture docent"
  },
  "icons": {
    "16": "logo/logo16.png",
    "32": "logo/logo32.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html", "static/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
